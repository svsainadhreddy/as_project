<?xml version="1.0" encoding="utf-8"?>
<!-- Full-screen dark background with subtle vignette -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- base gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#051014"
                android:centerColor="#07161A"
                android:endColor="#08181B"/>
        </shape>
    </item>

    <!-- faint vignette (edges darker) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="900"
                android:centerX="0.5"
                android:centerY="0.15"
                android:startColor="#00000000"
                android:endColor="#080F12"/>
        </shape>
    </item>
</layer-list>
