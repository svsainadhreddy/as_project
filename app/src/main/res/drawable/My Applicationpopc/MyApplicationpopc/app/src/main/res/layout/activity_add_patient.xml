<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4C4C4">

    <!-- Back Button -->


    <ImageButton
        android:id="@+id/ivBack"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/circle_dark_bg"
        android:contentDescription="@string/back"
        android:padding="16dp"
        android:src="@drawable/ic_arrow_back"
        />

    <!-- Scrollable container -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ivBack"
        android:layout_above="@id/btnNext"
        android:fillViewport="true"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal"
            android:elevation="6dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_img"
                android:scaleType="centerInside"
                android:background="@drawable/circle_bg"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/profile_image" />

            <!-- Change Photo Label -->
            <TextView
                android:id="@+id/tvChangePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_patient_photo"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Patient ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/patient_id"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:inputType="number"
                    android:hint="@string/id"
                    android:padding="12dp"
                    android:autofillHints="username" />
            </LinearLayout>

            <!-- Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:inputType="textPersonName"
                    android:hint="@string/name"
                    android:padding="12dp"
                    android:autofillHints="name" />
            </LinearLayout>

            <!-- Age -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/age"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:inputType="number"
                    android:hint="@string/age"
                    android:padding="12dp"
                    android:autofillHints="birthDateDay" />
            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/phone"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:inputType="phone"
                    android:hint="@string/phone"
                    android:padding="12dp"
                    android:autofillHints="phone" />
            </LinearLayout>

            <!-- Weight -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/weight"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:inputType="numberDecimal"
                    android:hint="@string/weight"
                    android:padding="12dp"
                    android:autofillHints="weight" />
            </LinearLayout>

            <!-- Gender -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/gender"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:inputType="textCapWords"
                    android:hint="@string/gender"
                    android:padding="12dp"
                    android:autofillHints="gender" />
            </LinearLayout>

            <!-- Height -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/height"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etHeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:inputType="numberDecimal"
                    android:hint="@string/height"
                    android:padding="12dp"
                    android:autofillHints="height" />
            </LinearLayout>

            <!-- (Removed Surgery Date field) -->

        </LinearLayout>
    </ScrollView>

    <!-- Next Button pinned at bottom -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="@string/next"
        android:backgroundTint="#AAAAAA"
        android:textColor="@android:color/black"
        android:paddingLeft="24dp"
        android:paddingRight="24dp" />

</RelativeLayout>
