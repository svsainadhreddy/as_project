<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplicationpopc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplicationPOPC">

        <!-- ðŸ”¹ MainActivity (Launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ”¹ Login Page -->
        <activity
            android:name=".SecondActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- ðŸ”¹ Register Page -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:parentActivityName=".SecondActivity" />

        <!-- ðŸ”¹ Home Admin -->
        <activity
            android:name=".HomeAdminActivity"
            android:exported="false"
            android:parentActivityName=".SecondActivity" />

        <!-- ðŸ”¹ Home Doctor -->
        <activity
            android:name=".DoctorHomeActivity"
            android:exported="false"
            android:parentActivityName=".SecondActivity" />

        <!-- ðŸ”¹ Doctor Profile -->
        <activity
            android:name=".DoctorProfileActivity"
            android:exported="false"
            android:parentActivityName=".DoctorHomeActivity" />

        <!-- ðŸ”¹ Doctor Management -->
        <activity android:name=".ListDoctorActivity" android:exported="false" />
        <activity android:name=".AddDoctorActivity" android:exported="false" />

        <!-- ðŸ”¹ Patient Management -->
        <activity android:name=".ListPatientActivity" android:exported="false" />
        <activity android:name=".AddPatientActivity" android:exported="false" />
        <activity android:name=".PatientDemographicActivity" android:exported="false" />
        <activity android:name=".MedicalHistoryActivity" android:exported="false" />
        <activity android:name=".PreoperativeSurvey" android:exported="false" />
        <activity android:name=".SurgeryRelatedActivity" android:exported="false" />
        <activity android:name=".PlannedAnesthesiaActivity" android:exported="false" />

        <!-- ðŸ”¹ Considerations â†’ next is Score -->
        <activity
            android:name=".ConsiderationsActivity"
            android:exported="false"
            android:parentActivityName=".PlannedAnesthesiaActivity" />

        <!-- ðŸ”¹ ScoreActivity â†’ final, then DoctorHome -->
        <activity
            android:name=".ScoreActivity"
            android:exported="false"
            android:parentActivityName=".ConsiderationsActivity" />

    </application>
</manifest>
