<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_medical_history">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle_dark_bg"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="@string/back"
        android:padding="12dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:paddingStart="32dp"
        android:paddingTop="12dp"
        android:paddingEnd="32dp"
        android:paddingBottom="12dp"
        android:text="@string/total_score"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Scrollable Content with Done Button at Bottom -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Demographic Score -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/demographic_score"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textDemoScore"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/score_box_bg"
                android:text="0"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Medical Score -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medical_score"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textMedicalScore"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/score_box_bg"
                android:text="0"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Pre-op Score -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preop_score"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textPreopScore"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/score_box_bg"
                android:text="0"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Surgery Score -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/surgery_score"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textSurgeryScore"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/score_box_bg"
                android:text="0"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Anesthetic Score -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/anesthetic_score"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textAnestheticScore"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/score_box_bg"
                android:text="0"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Post-op Score -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/postop_score"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textPostopScore"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/score_box_bg"
                android:text="0"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Total Score -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_score"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textTotalScore"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/score_box_bg"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Management Advice -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/management_advice"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textManage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advice will appear here."
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_marginBottom="20dp" />

            <!-- âœ… Done Button at bottom of scroll -->
            <Button
                android:id="@+id/doneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:background="@drawable/rounded_button"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
