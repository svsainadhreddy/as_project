<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    android:padding="16dp">

    <!-- Top Icon -->
    <ImageView
        android:id="@+id/imgDoctor"
        android:layout_width="198dp"
        android:layout_height="192dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/app_logo_desc"
        android:src="@drawable/ic_doctor_logo" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgDoctor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/title_popc"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#1C4969"
        android:shadowColor="#55000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="4" />

    <!-- White Card Background -->
    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_card"
        android:padding="24dp">

        <!-- Subtitle inside card -->
        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/description_popc"
            android:textSize="20sp"
            android:textColor="#000000"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="40dp" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:text="@string/login"
            android:textSize="22sp"
            android:fontFamily="cursive"
            android:contentDescription="@string/login_button_desc" />

        <Button
            android:id="@+id/btnSignin"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:text="@string/register"
            android:textSize="22sp"
            android:fontFamily="cursive"
            android:contentDescription="@string/signin_button_desc" />

    </LinearLayout>

</RelativeLayout>
