<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_medical_history">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Welcome Title -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_survey"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Back button -->
        <ImageButton
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_dark_bg"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <!-- Patient Demographics -->
        <TextView
            android:id="@+id/tvSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/patient_demographics"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:background="@drawable/rounded_button"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="@id/ivBack"
            app:layout_constraintBottom_toBottomOf="@id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp" />

        <!-- Age -->
        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_age"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/ivBack"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" />

        <RadioGroup
            android:id="@+id/rgAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvAge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/rbAge5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age_5"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbAge51to80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age_51_80"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbAge80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age_80"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </RadioGroup>

        <!-- Sex -->
        <TextView
            android:id="@+id/tvSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sex"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/rgAge"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/rgSex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvSex"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </RadioGroup>

        <!-- BMI -->
        <TextView
            android:id="@+id/tvBmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bmi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/rgSex"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/rgBmi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvBmi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/rbBmiLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bmi_low"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbBmiHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bmi_high"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </RadioGroup>

        <!-- Smoking -->
        <TextView
            android:id="@+id/tvSmoking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smoking_status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/rgBmi"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/rgSmoking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvSmoking"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/rbNever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/never"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_smoker"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbEx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ex_smoker"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </RadioGroup>

        <!-- Alcohol -->
        <TextView
            android:id="@+id/tvAlcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alcohol_consumption"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/rgSmoking"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/rgAlcohol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvAlcohol"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/rbYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </RadioGroup>

        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:background="@drawable/rounded_button"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/rgAlcohol"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
