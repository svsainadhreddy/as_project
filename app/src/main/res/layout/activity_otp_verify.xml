<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/otp_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <!-- Top-left circular back button -->
    <ImageButton
        android:id="@+id/ivBack"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/circle_back"
        android:contentDescription="Back"
        android:src="@drawable/ic_arrow_back"
        android:scaleType="center"
        app:tint="@color/back_icon_tint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/title_indigo"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardOtp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/card_glass_bg"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp"
            android:gravity="center_horizontal"
            android:animateLayoutChanges="true">

            <!-- OTP BOXES ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="22dp">

                <!-- OTP DIGIT 1 -->
                <EditText
                    android:id="@+id/otp1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/otp_box"
                    android:maxLength="1"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:textSize="18sp"
                    android:textColor="@color/otp_dot"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/otp2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/otp_box"
                    android:maxLength="1"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:textSize="18sp"
                    android:textColor="@color/otp_dot"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/otp3"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/otp_box"
                    android:maxLength="1"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:textSize="18sp"
                    android:textColor="@color/otp_dot"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/otp4"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/otp_box"
                    android:maxLength="1"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:textSize="18sp"
                    android:textColor="@color/otp_dot"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/otp5"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/otp_box"
                    android:maxLength="1"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:textSize="18sp"
                    android:textColor="@color/otp_dot"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/otp6"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/otp_box"
                    android:maxLength="1"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:imeOptions="actionDone"
                    android:textSize="18sp"
                    android:textColor="@color/otp_dot"
                    android:gravity="center"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Autofill target: visible, tiny, used by system autofill/SMS autofill -->
            <EditText
                android:id="@+id/etOtpAutofill"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.01"
                android:visibility="visible"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="6"
                android:autofillHints="oneTimeCode"
                android:importantForAutofill="yes"/>

            <!-- Hidden EditText (if needed by API) -->
            <EditText
                android:id="@+id/etOtp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:inputType="number"
                android:maxLength="6" />

            <!-- VERIFY BUTTON -->
            <Button
                android:id="@+id/btnVerify"
                android:layout_width="220dp"
                android:layout_height="56dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:text="VERIFY"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/btn_disabled_bg"
                android:textColor="@color/btn_disabled_text" />

            <!-- Caption -->
            <TextView
                android:id="@+id/tvCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check your email or SMS for the code"
                android:textSize="12sp"
                android:textColor="@color/caption_muted"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
