<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/appBackgroundColor"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- 2C3E50 Doctor Info Card 121622 -->
    <LinearLayout
        android:id="@+id/doctorInfoCard"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/dark_rounded_card"
        android:elevation="6dp"
        android:backgroundTint="@color/White_Sand"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgDoctor"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/circle_image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person_outline" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tvDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Eleanor Grant"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tvDoctorSpeciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anesthesia"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: "
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/tvDoctorId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="none"
                    android:focusable="false"
                    android:text="DR-982341"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Dashboard Buttons Grid -->
    <GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctorInfoCard"
        android:layout_marginTop="29dp"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="true"
        android:layout_marginHorizontal="20dp">

        <!-- Dashboard Button Template -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/dark_rounded_card"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:id="@+id/btnDashboard"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btnDashboard1"
                    android:layout_width="42dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Button 2 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/dark_rounded_card"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:layout_marginBottom="40dp"
            >

            <LinearLayout
                android:id="@+id/btnPatientManagement"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btnPatientManagement1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_patients"
                    app:tint="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patients"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Button 3 1E2733-->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/dark_rounded_card"
            android:elevation="4dp">

            <LinearLayout
                android:id="@+id/btnSettings"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btnSettings1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Button 4 -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/dark_rounded_card"
            android:elevation="4dp">

            <LinearLayout
                android:id="@+id/btnReports"
                android:orientation="vertical"
                android:gravity="center"
                android:backgroundTint="#B2BEB5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btnReports1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_reports"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reports"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </FrameLayout>
    </GridLayout>
</RelativeLayout>
