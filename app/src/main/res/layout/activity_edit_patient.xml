<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262645">

    <!-- Back Button  1A1A2E -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/circle_dark_bg"
        android:contentDescription="Back"
        android:src="@drawable/ic_arrow_back" />

    <ScrollView
        android:id="@+id/formScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnBack"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_card_dark"
            android:padding="20dp"
            android:elevation="6dp">

            <!-- Patient Photo -->

            <ImageView
                android:id="@+id/imgPatient"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:background="@drawable/circle_bg"
                android:scaleType="centerInside"
                android:src="@drawable/ic_user" />

            <TextView
                android:id="@+id/tvAddPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Patient Photo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <!-- Patient ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient ID"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1" />

            <EditText
                android:id="@+id/etPatientId"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Patient ID"
                android:background="@drawable/field_bg"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#555555"
                android:layout_marginTop="8dp" />

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Full Name"
                android:background="@drawable/field_bg"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#555555"
                android:layout_marginTop="8dp" />

            <!-- Gender -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/genderGroup"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/field_bg"
                android:gravity="center"
                android:padding="4dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/btnFemale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Female"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_segment_selected"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btnMale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Male"
                    android:textColor="#555555"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btnOther"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Other"
                    android:textColor="#555555"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Age -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/ageContainer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/field_bg"
                android:padding="4dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/btnAgeMinus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="âˆ’"
                    android:textSize="20sp"
                    android:textColor="#555555"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etAgeInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:text="24"
                    android:textSize="16sp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/btnAgePlus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="20sp"
                    android:textColor="#555555"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Phone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:maxLength="10"
                android:background="@drawable/field_bg"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#555555"
                android:layout_marginTop="8dp" />

            <!-- Weight -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight (kg)"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Weight"
                android:inputType="numberDecimal"
                android:background="@drawable/field_bg"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#555555"
                android:layout_marginTop="8dp" />

            <!-- Height -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height (cm)"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etHeight"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Height"
                android:inputType="numberDecimal"
                android:background="@drawable/field_bg"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#555555"
                android:layout_marginTop="8dp" />

            <!-- BMI -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/etBMI"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:background="@drawable/field_bg"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
