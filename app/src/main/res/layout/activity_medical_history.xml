<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    android:paddingBottom="16dp"
    android:paddingStart="0dp"
    android:paddingEnd="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_marginBottom="50dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_dark_bg"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_arrow_back"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/medical_history"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="#293042" />
        </LinearLayout>

        <!-- Medical Condition Sections -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_field_pill_glass"
            android:padding="14dp"
            android:layout_marginBottom="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disease_copd"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="#293042"
                android:layout_marginBottom="8dp"/>
            <RadioGroup
                android:id="@+id/rgCOPD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/rbCOPDYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
                <RadioButton
                    android:id="@+id/rbCOPDNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_field_pill_glass"
            android:padding="14dp"
            android:layout_marginBottom="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disease_asthma"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="#293042"
                android:layout_marginBottom="8dp"/>
            <RadioGroup
                android:id="@+id/rgAsthma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/rbAsthmaYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
                <RadioButton
                    android:id="@+id/rbAsthmaNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_field_pill_glass"
            android:padding="14dp"
            android:layout_marginBottom="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disease_osa"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="#293042"
                android:layout_marginBottom="8dp"/>
            <RadioGroup
                android:id="@+id/rgOSA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/rbOSAYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
                <RadioButton
                    android:id="@+id/rbOSANo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_field_pill_glass"
            android:padding="14dp"
            android:layout_marginBottom="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disease_ild"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="#293042"
                android:layout_marginBottom="8dp"/>
            <RadioGroup
                android:id="@+id/rgILD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/rbILDYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
                <RadioButton
                    android:id="@+id/rbILDNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/bg_field_pill_glass"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/disease_heart_failure"
                android:textColor="#293042"
                android:textSize="19sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgHeartFailure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbHeartFailureYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@drawable/selector_radio_bg"
                    android:button="@null"
                    android:padding="12dp"
                    android:text="@string/yes"
                    android:textColor="#47474D" />

                <RadioButton
                    android:id="@+id/rbHeartFailureNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@drawable/selector_radio_bg"
                    android:button="@null"
                    android:padding="12dp"
                    android:text="@string/no"
                    android:textColor="#47474D" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_field_pill_glass"
            android:padding="14dp"
            android:layout_marginBottom="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disease_cad"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="#293042"
                android:layout_marginBottom="8dp"/>
            <RadioGroup
                android:id="@+id/rgCAD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/rbCADYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
                <RadioButton
                    android:id="@+id/rbCADNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_field_pill_glass"
            android:padding="14dp"
            android:layout_marginBottom="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disease_hypertension"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="#293042"
                android:layout_marginBottom="8dp"/>
            <RadioGroup
                android:id="@+id/rgHypertension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/rbHypertensionYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
                <RadioButton
                    android:id="@+id/rbHypertensionNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_field_pill_glass"
            android:padding="14dp"
            android:layout_marginBottom="14dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disease_diabetes"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="#293042"
                android:layout_marginBottom="8dp"/>
            <RadioGroup
                android:id="@+id/rgDiabetes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/rbDiabetesYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
                <RadioButton
                    android:id="@+id/rbDiabetesNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_field_pill_glass"
            android:padding="14dp"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disease_ckd"
                android:textStyle="bold"
                android:textSize="19sp"
                android:textColor="#293042"
                android:layout_marginBottom="8dp"/>
            <RadioGroup
                android:id="@+id/rgCKD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/rbCKDYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
                <RadioButton
                    android:id="@+id/rbCKDNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#47474D"
                    android:layout_margin="6dp"/>
            </RadioGroup>
        </LinearLayout>

        <!-- Next Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="@string/next"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button"
            android:textStyle="bold"
            android:textColor="#4E4E4E"
            android:textSize="18sp"
            android:backgroundTint="@null"
            />

    </LinearLayout>
</ScrollView>
