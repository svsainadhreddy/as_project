<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sai1"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_dark_bg"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_arrow_back"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/medical_history"
                android:textSize="20sp"
                android:background="@drawable/rounded_card"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- ===== Questions ===== -->

        <!-- COPD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCOPD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCOPD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disease_copd"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />
                <RadioGroup
                    android:id="@+id/rgCOPD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/rbCOPDYes"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/yes"/>
                    <RadioButton android:id="@+id/rbCOPDNo"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/no"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Asthma -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAsthma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvAsthma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disease_asthma"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />
                <RadioGroup
                    android:id="@+id/rgAsthma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/rbAsthmaYes"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/yes"/>
                    <RadioButton android:id="@+id/rbAsthmaNo"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/no"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- OSA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardOSA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvOSA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disease_osa"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />
                <RadioGroup
                    android:id="@+id/rgOSA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/rbOSAYes"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/yes"/>
                    <RadioButton android:id="@+id/rbOSANo"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/no"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ILD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardILD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvILD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disease_ild"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />
                <RadioGroup
                    android:id="@+id/rgILD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/rbILDYes"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/yes"/>
                    <RadioButton android:id="@+id/rbILDNo"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/no"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Heart Failure -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHeartFailure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvHeartFailure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disease_heart_failure"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />
                <RadioGroup
                    android:id="@+id/rgHeartFailure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/rbHeartFailureYes"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/yes"/>
                    <RadioButton android:id="@+id/rbHeartFailureNo"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/no"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CAD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCAD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCAD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disease_cad"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />
                <RadioGroup
                    android:id="@+id/rgCAD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/rbCADYes"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/yes"/>
                    <RadioButton android:id="@+id/rbCADNo"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/no"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Hypertension -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHypertension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHypertension"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="@string/disease_hypertension"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgHypertension"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/rbHypertensionYes"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/yes"/>
                    <RadioButton android:id="@+id/rbHypertensionNo"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/no"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Diabetes -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDiabetes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvDiabetes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disease_diabetes"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />
                <RadioGroup
                    android:id="@+id/rgDiabetes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/rbDiabetesYes"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/yes"/>
                    <RadioButton android:id="@+id/rbDiabetesNo"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/no"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CKD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCKD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCKD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disease_ckd"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />
                <RadioGroup
                    android:id="@+id/rgCKD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/rbCKDYes"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/yes"/>
                    <RadioButton android:id="@+id/rbCKDNo"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:text="@string/no"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="@string/next"
            android:backgroundTint="#AAAAAA" />
    </LinearLayout>
</ScrollView>
