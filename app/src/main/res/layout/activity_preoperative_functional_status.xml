<?xml version="1.0" encoding="utf-8"?>
<!-- Preoperative Functional Status screen -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sai1"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/rootLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header card -->
        <LinearLayout
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_card"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_dark_bg"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/back"
                android:padding="12dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/preoperative_status"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- ASA Physical Status -->
        <TextView
            android:id="@+id/labelAsa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/asa_status"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <RadioGroup
            android:id="@+id/rgAsa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton android:id="@+id/rbAsaI" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="I" />
            <RadioButton android:id="@+id/rbAsaII" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="II" />
            <RadioButton android:id="@+id/rbAsaIII" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="III" />
            <RadioButton android:id="@+id/rbAsaIV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="IV" />
            <RadioButton android:id="@+id/rbAsaV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="V" />
        </RadioGroup>

        <!-- Exercise tolerance -->
        <TextView android:id="@+id/labelExercise" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/exercise_tolerance" android:textStyle="bold" android:textSize="16sp" android:layout_marginTop="20dp"/>

        <RadioGroup android:id="@+id/rgExercise" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <RadioButton android:id="@+id/rbMetLess4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/less_than_4" />
            <RadioButton android:id="@+id/rbMetMore4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/more_than_4" />
        </RadioGroup>

        <!-- Dyspnea at rest -->
        <TextView android:id="@+id/labelDyspnea" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/dyspnea_rest" android:textStyle="bold" android:textSize="16sp" android:layout_marginTop="20dp"/>

        <RadioGroup android:id="@+id/rgDyspnea" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <RadioButton android:id="@+id/rbDyspneaYes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/yes" />
            <RadioButton android:id="@+id/rbDyspneaNo"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no" />
        </RadioGroup>

        <!-- Recent respiratory infection -->
        <TextView android:id="@+id/labelInfection" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/recent_infection" android:textStyle="bold" android:textSize="16sp" android:layout_marginTop="20dp"/>

        <RadioGroup android:id="@+id/rgInfection" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <RadioButton android:id="@+id/rbInfectionYes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/yes" />
            <RadioButton android:id="@+id/rbInfectionNo"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/no" />
        </RadioGroup>

        <!-- SpO2 on room air -->
        <TextView android:id="@+id/labelSpO2" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/spo2_room_air" android:textStyle="bold" android:textSize="16sp" android:layout_marginTop="20dp"/>

        <RadioGroup android:id="@+id/rgSpO2" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <RadioButton android:id="@+id/rbSpO2_90" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/spo2_90" />
            <RadioButton android:id="@+id/rbSpO2_91_95" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/spo2_91_95" />
            <RadioButton android:id="@+id/rbSpO2_96" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/spo2_96" />
        </RadioGroup>

        <!-- Next -->
        <Button android:id="@+id/btnNext" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/next" android:layout_marginTop="28dp" android:paddingStart="32dp" android:paddingEnd="32dp"
            android:backgroundTint="#D9D9D9" android:textColor="#000000" android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
