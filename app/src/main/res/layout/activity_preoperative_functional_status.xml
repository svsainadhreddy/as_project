<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171D26"
    android:paddingBottom="16dp"
    android:paddingStart="0dp"
    android:paddingEnd="0dp">

    <LinearLayout
        android:id="@+id/rootLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/headerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="0dp"
            android:layout_marginBottom="28dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_dark_bg"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/back"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/preoperative_status"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center" />
        </LinearLayout>

        <!-- ASA Physical Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_section_bg"
            android:padding="14dp"
            android:layout_marginBottom="14dp">

            <TextView
                android:id="@+id/labelAsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asa_status"
                android:textStyle="bold"
                android:textColor="#293042"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rgAsa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbAsaI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#9699A9"
                    android:layout_margin="6dp" />
                <RadioButton
                    android:id="@+id/rbAsaII"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="II"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#9699A9"
                    android:layout_margin="6dp" />
                <RadioButton
                    android:id="@+id/rbAsaIII"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="III"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#9699A9"
                    android:layout_margin="6dp" />
                <RadioButton
                    android:id="@+id/rbAsaIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IV"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#9699A9"
                    android:layout_margin="6dp" />
                <RadioButton
                    android:id="@+id/rbAsaV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#9699A9"
                    android:layout_margin="6dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Exercise tolerance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_section_bg"
            android:padding="14dp"
            android:layout_marginBottom="14dp">

            <TextView
                android:id="@+id/labelExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exercise_tolerance"
                android:textStyle="bold"
                android:textColor="#293042"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rgExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbMetLess4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/less_than_4"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#9699A9"
                    android:layout_margin="6dp" />
                <RadioButton
                    android:id="@+id/rbMetMore4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more_than_4"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#9699A9"
                    android:layout_margin="6dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Dyspnea at rest -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_section_bg"
            android:padding="14dp"
            android:layout_marginBottom="14dp">

            <TextView
                android:id="@+id/labelDyspnea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dyspnea_rest"
                android:textStyle="bold"
                android:textColor="#293042"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rgDyspnea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbDyspneaYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#9699A9"
                    android:layout_margin="6dp" />
                <RadioButton
                    android:id="@+id/rbDyspneaNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#9699A9"
                    android:layout_margin="6dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Recent respiratory infection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_section_bg"
            android:padding="14dp"
            android:layout_marginBottom="14dp">

            <TextView
                android:id="@+id/labelInfection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_infection"
                android:textStyle="bold"
                android:textColor="#293042"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rgInfection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbInfectionYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#9699A9"
                    android:layout_margin="6dp" />
                <RadioButton
                    android:id="@+id/rbInfectionNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#9699A9"
                    android:layout_margin="6dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- SpO2 on room air -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_section_bg"
            android:padding="14dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/labelSpO2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spo2_room_air"
                android:textStyle="bold"
                android:textColor="#293042"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rgSpO2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbSpO2_90"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spo2_90"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#9699A9"
                    android:layout_margin="6dp" />
                <RadioButton
                    android:id="@+id/rbSpO2_91_95"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spo2_91_95"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#9699A9"
                    android:layout_margin="6dp" />
                <RadioButton
                    android:id="@+id/rbSpO2_96"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spo2_96"
                    android:button="@null"
                    android:background="@drawable/selector_radio_bg"
                    android:padding="12dp"
                    android:textColor="#9699A9"
                    android:layout_margin="6dp" />
            </RadioGroup>
        </LinearLayout>

        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/next"
            android:layout_marginBottom="16dp"
            android:background="@drawable/next_button_bg"
            android:backgroundTint="@null"
            android:textStyle="bold"
            android:textColor="#4E4E4E"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>
