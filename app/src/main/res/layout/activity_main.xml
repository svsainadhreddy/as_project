<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/img_1"
    android:padding="16dp">

    <!-- Top Icon -->

    <!-- White Card Background -->


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="158dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="102dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:shadowColor="#55000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="@string/title_popc"
        android:textAllCaps="true"
        android:textColor="#E06B3A"
        android:textSize="48sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="395dp"
        android:layout_height="861dp"
        android:layout_below="@id/tvTitle"

        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- Subtitle inside card -->
        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="400dp"
            android:gravity="center"
            android:layout_marginTop="-0dp"
            android:lineSpacingExtra="4dp"
            android:text="@string/description_popc"
            android:textColor="#737272"
            android:textSize="17sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="false"
            android:maxLines="2"
            android:inputType="textMultiLine" />


        <!-- Login Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/next_button_bg"
            android:fontFamily="sans-serif-medium"
            android:text="@string/login"
            android:textSize="22sp"
            android:layout_marginTop="100dp"
            android:textStyle="bold"
            android:backgroundTint="@null"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignin"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/signin_button_desc"
            android:fontFamily="sans-serif-medium"
            android:text="@string/register"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            />

    </LinearLayout>

</RelativeLayout>
