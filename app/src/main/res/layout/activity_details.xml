<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/android_com"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    android:padding="0dp">

    <!-- =========================
         HEADER SECTION
     ========================= -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="#0A2647"
        android:padding="16dp">

        <!-- Top Bar: Back + Title + Profile -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:contentDescription="Back"
                android:background="@drawable/ic_arrow_back"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvDashboardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Dashboard"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="Profile"
                android:src="@android:drawable/ic_menu_myplaces"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_image" />
        </RelativeLayout>

        <!-- Total Patients Info + Graph -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/totalInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvTotalLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL PATIENTS"
                    android:textColor="#BFD6FF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvTotalValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textColor="#FFFFFF"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saved"
                    android:textColor="#BFD6FF"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgGraph"
                android:layout_width="150dp"
                android:layout_height="180dp"
                app:tint="@null"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:contentDescription="Graph"
                android:src="@drawable/ic_menu_graph" />
        </RelativeLayout>
    </LinearLayout>

    <!-- =========================
         STATISTIC CARDS (2x2)
     ========================= -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_below="@id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Total Patients Surveyed -->
            <LinearLayout
                android:id="@+id/cardTotalPatients"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/bg_card_add">

                <TextView
                    android:id="@+id/labelTotalPatients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surveye Completed patients"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTotalPatientsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#1E4BB8"
                    android:hint="0"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Pending Survey Patients -->
            <LinearLayout
                android:id="@+id/cardPendingPatients"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/bg_card_edit">

                <TextView
                    android:id="@+id/labelPending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending survey patients"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvPendingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#737373"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- High Risk -->
            <LinearLayout
                android:id="@+id/cardHighRisk"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/bg_card_delete">

                <TextView
                    android:id="@+id/labelHighRisk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High-risk complications flagged"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvHighriskvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="0"
                    android:textColor="#E5A100"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Optional placeholder to maintain alignment -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</RelativeLayout>
