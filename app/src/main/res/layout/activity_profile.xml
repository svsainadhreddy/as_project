<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A2342">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/circle_dark_bg"
            android:src="@drawable/ic_arrow_back"
            app:tint="#FFFFFF"
            android:contentDescription="Back" />

        <!-- Floating Circular Profile Image -->
        <FrameLayout
            android:id="@+id/profileImageHolder"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:background="@drawable/circle_light_bg"
            android:elevation="10dp"
            android:clipToOutline="true">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_profile"
                android:contentDescription="Profile Image" />
        </FrameLayout>

        <!-- Profile Card -->
        <LinearLayout
            android:id="@+id/profileCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImageHolder"
            android:layout_marginTop="-60dp"
            android:layout_marginHorizontal="24dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:elevation="6dp"
            android:padding="24dp"
            android:clipChildren="false">

            <!-- Doctor ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOCTOR ID"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/etDoctorId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOC-482913"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_input_bg"
                android:hint="Dr. Evelyn Hart"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:maxLength="50"
                android:textColor="#000"
                android:textColorHint="#555"
                android:textSize="16sp" />

            <!-- Phone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_input_bg"
                android:hint="+91 4555501235"
                android:padding="10dp"
                android:maxLength="10"
                android:inputType="phone"
                android:textColor="#000"
                android:textColorHint="#555"
                android:textSize="16sp" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_input_bg"
                android:hint="e.hart@clinic.example"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#555"
                android:textSize="16sp" />

            <!-- Specialization -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPECIALIZATION"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/etSpecialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_input_bg"
                android:spinnerMode="dropdown"
                android:padding="8dp"
                android:entries="@array/specialization_array" />

            <!-- Gender -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/genderGroup"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/chip_input_bg"
                android:gravity="center"
                android:padding="4dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/btnFemale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Female"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bg_segment_selected"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btnMale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Male"
                    android:textColor="#555555"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btnOther"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Other"
                    android:textColor="#555555"
                    android:background="@android:color/transparent"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Age -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/ageContainer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/chip_input_bg"
                android:padding="4dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/btnAgeMinus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="âˆ’"
                    android:textSize="20sp"
                    android:textColor="#555555"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etAgeInput"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:text="24"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnAgePlus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="20sp"
                    android:textColor="#555555"
                    android:textStyle="bold" />
            </LinearLayout>


            <!-- Update Button -->
            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_marginTop="28dp"
                android:background="@drawable/btn_copper_bg"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="12dp"
                android:textAllCaps="false" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
