<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0A2342">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false">

        <View
            android:id="@+id/topSection"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="#0A2342" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/circle_dark_bg"
            android:src="@drawable/ic_arrow_back"
            app:tint="#FFFFFF"
            android:contentDescription="Back" />

        <LinearLayout
            android:id="@+id/profileCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginHorizontal="24dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:elevation="6dp"
            android:padding="24dp"
            android:clipChildren="false">

            <FrameLayout
                android:id="@+id/profileImageHolder"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_light_bg"
                android:elevation="4dp"
                android:layout_marginTop="-80dp">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_img"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:padding="0dp" />
            </FrameLayout>

            <!-- Doctor ID -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOCTOR ID"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/etDoctorId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DOC-482913"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_input_bg"
                android:hint="Dr. Evelyn Hart"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#555"
                android:textSize="16sp" />

            <!-- Phone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHONE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_input_bg"
                android:hint="+1 (415) 555-0123"
                android:padding="10dp"
                android:inputType="phone"
                android:textColor="#000"
                android:textColorHint="#555"
                android:textSize="16sp" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_input_bg"
                android:hint="e.hart@clinic.example"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#555"
                android:textSize="16sp" />

            <!-- Specialization -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPECIALIZATION"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/etSpecialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_input_bg"
                android:spinnerMode="dropdown"
                android:padding="8dp"
                android:entries="@array/specialization_array" />

            <!-- Gender -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENDER"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@drawable/rounded_button"
                    android:padding="8dp"
                    android:spinnerMode="dropdown"
                    android:imeOptions="actionNext"/>


            </LinearLayout>

            <!-- Age -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AGE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#9AA5B1"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <NumberPicker
                    android:id="@+id/npAge"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_button"
                    android:divider="@android:color/transparent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvAgeIncCount"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="↑"
                        android:textColor="#4caf50"
                        android:textStyle="bold"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/tvAgeDecCount"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="↓"
                        android:textStyle="bold"
                        android:textColor="#d32f2f"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>


            <!-- Update Button -->
            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_marginTop="28dp"
                android:background="@drawable/btn_copper_bg"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="12dp"
                android:textAllCaps="false" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
