<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#181921"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="10dp">
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_image"
                android:src="@drawable/ic_arrow_back"
                app:tint="#FFF"
                android:scaleType="centerInside" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient Management"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:layout_marginStart="14dp"/>
        </LinearLayout>

        <!-- Photo Upload Section -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/rounded_card_bgap"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp">
            <ImageView
                android:id="@+id/imgPatient"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_person_outline"
                android:background="@drawable/circle_image"
                android:scaleType="centerCrop"
                android:contentDescription="Add Patient Photo"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Patient Photo"
                    android:textColor="#FFF"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Patient Info Card -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/rounded_card_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginBottom="18dp">

            <TextView android:text="Patient ID" android:textColor="#FFF" android:textSize="14sp"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <EditText android:id="@+id/etPatientId" android:hint="Patient Id"
                android:inputType="text"
                android:background="@drawable/field_bg"
                android:textColor="#FFF"
                android:textColorHint="#888"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_marginBottom="10dp"/>

            <TextView android:text="Name" android:textColor="#FFF" android:textSize="14sp"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <EditText android:id="@+id/etName" android:hint="Name"
                android:inputType="textPersonName"
                android:background="@drawable/field_bg"
                android:textColor="#FFF"
                android:textColorHint="#888"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_marginBottom="10dp"/>

            <TextView android:text="Age" android:textColor="#FFF" android:textSize="14sp"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <EditText android:id="@+id/etAge" android:hint="Age"
                android:inputType="number"
                android:background="@drawable/field_bg"
                android:textColor="#FFF"
                android:textColorHint="#888"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_marginBottom="10dp"/>

            <TextView android:text="Phone" android:textColor="#FFF" android:textSize="14sp"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <EditText android:id="@+id/etPhone" android:hint="Mobile Number"
                android:inputType="phone"
                android:background="@drawable/field_bg"
                android:textColor="#FFF"
                android:textColorHint="#888"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_marginBottom="10dp"/>

            <TextView android:text="Weight (kg)" android:textColor="#FFF" android:textSize="14sp"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <EditText android:id="@+id/etWeight" android:hint="Weight"
                android:inputType="numberDecimal"
                android:background="@drawable/field_bg"
                android:textColor="#FFF"
                android:textColorHint="#888"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Gender"
                android:textColor="#FFF"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spGender"
                android:background="@drawable/field_bg"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"
                android:spinnerMode="dropdown"/>


            <TextView android:text="Height (cm)" android:textColor="#FFF" android:textSize="14sp"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <EditText android:id="@+id/etHeight" android:hint="Height"
                android:inputType="numberDecimal"
                android:background="@drawable/field_bg"
                android:textColor="#FFF"
                android:textColorHint="#888"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_marginBottom="10dp"/>

            <TextView android:text="BMI" android:textColor="#FFF" android:textSize="14sp"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <EditText android:id="@+id/etBMI" android:hint="Body Mass Index"
                android:inputType="numberDecimal"
                android:background="@drawable/field_bg"
                android:textColor="#FFF"
                android:textColorHint="#888"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSave"
                android:text="Save"
                android:textColor="#FFF"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:backgroundTint="#38D395"
                android:layout_marginEnd="12dp"/>

            <Button
                android:id="@+id/btnNext"
                android:text="Next"
                android:textColor="#FFF"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:backgroundTint="#2E2D35"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
