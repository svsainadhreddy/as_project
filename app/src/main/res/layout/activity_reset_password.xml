<?xml version="1.0" encoding="utf-8"?>
<!-- activity_reset_password.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE9E4"
    tools:context=".ResetPasswordActivity">

    <!-- Top app bar: back + title -->
    <ImageButton
        android:id="@+id/ivBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_translucent"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="@string/back"
        app:tint="@color/teal_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="18sp"
        android:textColor="@color/teal_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"/>

    <!-- Centered card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="36dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardUseCompatPadding="true"
        android:background="@color/card_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- NEW PASSWORD label -->
            <TextView
                android:id="@+id/labelNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW PASSWORD"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/label_gray"
                android:layout_marginBottom="8dp"/>

            <!-- New password input (keep id as requested) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeWidth="2dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/teal_light"
                app:hintEnabled="false"
                android:backgroundTint="@color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter strong password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:paddingStart="14dp"
                    android:background="@drawable/bg_input_field_soft"
                    android:paddingEnd="14dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/hint_gray"
                    app:endIconMode="password_toggle"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- spacing -->
            <Space android:layout_width="match_parent" android:layout_height="12dp"/>

            <!-- CONFIRM PASSWORD label -->
            <TextView
                android:id="@+id/labelConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIRM PASSWORD"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/label_gray"
                android:layout_marginBottom="8dp"/>

            <!-- Confirm password input (keep id as requested) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxStrokeWidth="2dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/teal_pale"
                app:hintEnabled="false"
                android:backgroundTint="@color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    android:background="@drawable/bg_input_field_soft"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/hint_gray"
                    app:endIconMode="password_toggle"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- spacing -->
            <Space android:layout_width="match_parent" android:layout_height="18dp"/>

            <!-- Reset button (keep id btnSubmit) -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="4dp"
                android:text="RESET PASSWORD"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/btn_text"
                android:background="@drawable/rounded_button"
                app:backgroundTint="#9FD6CF"
                />

            <!-- spacing -->
            <Space android:layout_width="match_parent" android:layout_height="12dp"/>

            <!-- helper note -->
            <TextView
                android:id="@+id/tvHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Must be at least 8 characters with mixed case and numbers"
                android:textSize="12sp"
                android:textColor="@color/hint_gray"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
