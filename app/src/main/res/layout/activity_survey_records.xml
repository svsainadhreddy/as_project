<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <!-- Back button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_dark_bg"
        android:contentDescription="Back"
        android:src="@drawable/ic_arrow_back"
        android:scaleType="centerInside" />

    <!-- Title next to Back button -->

    <!-- Add New Section and Questions card -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/btnBack"
        android:layout_marginStart="50dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@id/btnBack"
        android:gravity="center_vertical"
        android:text="Survey Records"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAddSectionQuestions"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/btnBack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#D9D9D9"
        android:elevation="6dp"
        android:padding="16dp"
        android:text="+ ADD NEW SECTION AND QUESTIONS"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Modify Questions card -->
    <LinearLayout
        android:id="@+id/modifyContainer"
        android:layout_width="240dp"
        android:layout_height="290dp"
        android:layout_below="@id/btnAddSectionQuestions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_button"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvModify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="MODIFY QUESTIONS"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAddQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#FFFFFF"
            android:text="+ Add questions"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnEditQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#FFFFFF"
            android:text="+ Edit questions"
            android:textColor="#000000" />
    </LinearLayout>

</RelativeLayout>
