<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEA7AD"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:spacing="12dp">

        <!-- Title F3D27D-->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textSize="22sp"
            android:padding="8dp"
            android:textColor="@color/black"/>

        <!-- Dynamic Score Items -->
        <LinearLayout
            android:id="@+id/llSections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"/>

        <!-- Total Score Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            android:background="@drawable/gold_score_bg"
            android:padding="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOTAL SCORE"
                android:layout_gravity="start"
                android:textColor="#44443C"
                android:textSize="17sp"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/tvTotalScore"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="start"
                android:textSize="26sp"
                android:gravity="center"
                android:padding="6dp"
                android:textColor="#44443C"
                android:background="@drawable/rounded_card"/>
        </LinearLayout>



        <!-- PPC Risk Level Card -->
        <LinearLayout
            android:id="@+id/boxRiskLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/score_box_bg"
            android:layout_marginTop="16dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvRiskLevelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RISK LEVEL"
                android:textColor="#000"
                android:textSize="18sp"
                android:paddingBottom="8dp"/>

            <!-- NEW SCALE LINE -->
            <TextView
                android:id="@+id/tvRiskScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Low: 0–20  |  Moderate: 21–40  |  High: 41–60  |  Very High: >60"
                android:textSize="15sp"
                android:textColor="#555"
                android:paddingBottom="6dp"/>

            <TextView
                android:id="@+id/tvRiskLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="17sp"
                android:textColor="#222"/>
        </LinearLayout>


        <!-- Management Advice Card -->
        <LinearLayout
            android:id="@+id/boxManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/score_box_bg"
            android:layout_marginTop="16dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvManagementTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MANAGEMENT GUIDANCE"
                android:textColor="#000"
                android:textSize="18sp"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/tvManagement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:textColor="#222"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>


        <!-- Done Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_marginTop="24dp"
            android:backgroundTint="#F3D27D"
            android:background="@drawable/rounded_button"
            android:padding="16dp"/>

    </LinearLayout>
</ScrollView>
