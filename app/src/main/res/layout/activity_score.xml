<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_navy_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:spacing="12dp">

        <!-- Top bar -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textSize="22sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="#F3D27D"/>

        <!-- Section Scores (Dynamically Added) -->
        <LinearLayout
            android:id="@+id/llSections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="0dp"/>

        <!-- Total Score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/gold_score_bg"
            android:padding="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOTAL SCORE"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#44443C"
                android:textSize="17sp"
                android:letterSpacing="0.1"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/tvTotalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#44443C"
                android:layout_gravity="center_horizontal"
                android:padding="6dp"
                android:background="@drawable/rounded_card"/>
        </LinearLayout>

        <!-- Management Guidance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/score_box_bg"
            android:layout_marginTop="16dp"
            android:padding="14dp">

            <TextView
                android:id="@+id/tvManagement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="#222"
                android:lineSpacingExtra="2dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Done Button -->
        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#F3D27D"
            android:textColor="#222"
            android:textStyle="bold"
            android:padding="16dp"/>

    </LinearLayout>
</ScrollView>
