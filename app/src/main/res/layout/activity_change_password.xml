<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient_purple_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="30dp"
        android:layout_marginBottom="40dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_dark_bg"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_arrow_back"
            android:scaleType="centerInside" />
    </LinearLayout>
    <!-- Glassmorphic Card Centered -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_card_glass"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="28dp">

        <!-- Shield Icon -->
        <ImageView
            android:id="@+id/imgShield"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/ic_shield"
            android:background="@drawable/bg_circle_glass"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change your password"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#316484"
            android:layout_marginBottom="2dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keep your account safe by creating a strong new password you wonâ€™t forget."
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="#7197ad"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif" />

        <!-- Current password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current password"
            android:textColor="#7197AD"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_field_pill_glass"
            android:paddingStart="15dp"
            android:paddingEnd="6dp"
            android:layout_marginBottom="18dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_lock"
                android:layout_marginEnd="6dp"
                app:tint="#8BACCA"
                android:contentDescription="Lock Icon"/>
            <EditText
                android:id="@+id/etOldPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Current password"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColor="#497088"
                android:textColorHint="#ABBDC8"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:padding="0dp" />
            <ImageView
                android:id="@+id/ToggleOldPassword"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_eye_closed"
                app:tint="#8BACCA"
                android:layout_marginStart="4dp"
                android:contentDescription="Show password"/>
        </LinearLayout>

        <!-- New password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New password"
            android:textColor="#7197AD"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="6dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_field_pill_glass"
            android:paddingStart="15dp"
            android:paddingEnd="6dp"
            android:layout_marginBottom="18dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_key"
                android:layout_marginEnd="6dp"
                app:tint="#8BACCA"
                android:contentDescription="Key Icon"/>
            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="New password"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColor="#497088"
                android:textColorHint="#ABBDC8"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:padding="0dp" />
            <ImageView
                android:id="@+id/ToggleNewPassword"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_eye_closed"
                app:tint="#8BACCA"
                android:layout_marginStart="4dp"
                android:contentDescription="Show password"/>
        </LinearLayout>

        <!-- Confirm password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm password"
            android:textColor="#7197AD"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="6dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_field_pill_glass"
            android:paddingStart="15dp"
            android:paddingEnd="6dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_shield"
                android:layout_marginEnd="6dp"
                app:tint="#8BACCA"
                android:contentDescription="Lock Icon"/>
            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColor="#497088"
                android:textColorHint="#ABBDC8"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:padding="0dp" />
            <ImageView
                android:id="@+id/ToggleConfirmPassword"
                android:layout_width="24dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_eye_closed"
                app:tint="#8BACCA"
                android:layout_marginStart="4dp"
                android:contentDescription="Show password"/>
        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSavePassword"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text=" Save "
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:background="@drawable/bg_gradient_orange"
            android:elevation="8dp"
            android:layout_marginBottom="10dp"/>

        <!-- Remind Me Later -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make more secure Password"
            android:textSize="15sp"
            android:textColor="#B6DAF7"
            android:gravity="center"
            android:fontFamily="sans-serif" />
    </LinearLayout>
</RelativeLayout>
