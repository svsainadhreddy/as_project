<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simats.popc">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- For older devices (API 29â€“32) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/img_1"
        android:label="POPC"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplicationPOPC">

        <!-- FileProvider -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Main Activity (Launcher) -->
        <activity
            android:name="com.simats.popc.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Second Activity (Login) -->
        <activity
            android:name="com.simats.popc.SecondActivity"
            android:exported="false" />

        <!-- Register Activity -->
        <activity
            android:name="com.simats.popc.RegisterActivity"
            android:exported="false" />

        <!-- Home Activity -->
        <activity
            android:name="com.simats.popc.DoctorHomeActivity"
            android:exported="false" />

        <!-- Settings Activity -->
        <activity
            android:name="com.simats.popc.SettingsActivity"
            android:exported="false" />

        <!-- Change password Activity -->
        <activity
            android:name="com.simats.popc.ChangePasswordActivity"
            android:exported="false" />

        <!-- Change username Activity -->
        <activity
            android:name="com.simats.popc.ChangeUsernameActivity"
            android:exported="false" />

        <!-- Profile Activity -->
        <activity
            android:name="com.simats.popc.ProfileActivity"
            android:exported="false" />

        <!-- Details Activity -->
        <activity
            android:name="com.simats.popc.DetailsActivity"
            android:exported="false" />

        <!-- Survey/List Activities -->
        <activity
            android:name="com.simats.popc.SurveyListActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.HighRiskListActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.SurveyDisplayActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.PendingSurveysActivity"
            android:exported="false" />

        <!-- Patient management Activities -->
        <activity
            android:name="com.simats.popc.PatientManagementActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.EditPatientActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.AddPatientActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.ViewPatientListActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.ViewPatientActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.DeletePatientActivity"
            android:exported="false" />

        <!-- Question Activities -->
        <activity
            android:name="com.simats.popc.PatientDemographicsActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.MedicalHistoryActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.PreoperativeConsiderationsActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.SurgeryFactorsActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.PlannedAnesthesiaActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.PostoperativeActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.ScoreActivity"
            android:exported="false" />

        <!-- OTP & Reset Activities (must be registered) -->
        <activity
            android:name="com.simats.popc.OtpVerifyActivity"
            android:exported="false" />
        <activity
            android:name="com.simats.popc.ResetPasswordActivity"
            android:exported="false" />

    </application>
</manifest>
